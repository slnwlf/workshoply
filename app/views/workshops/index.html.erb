<div class="container-fluid">
	<%= render "sites/search_bar" %>
	<br>
	<div class="container">
		<div class="row">
			<% @workshops.each do |workshop| %>
			<div class="col-md-12 thumbnail">
				<div class="col-md-4">
					<%= image_tag workshop.image.url(:medium), class: "img-responsive workshop-img" %>
				</div>
				<div class="col-md-8">
					<h1 style="font-weight:bold; font-size: 32px"><strong><%= link_to workshop.title.titleize, workshop_path(workshop), class: "workshop-title-link" %></strong></h1>
					<p>
						Category: <strong><%= workshop.topic.name.titleize if workshop.topic %></strong>
					</p>
					<div>
						<p><%= truncate(workshop.description, length: 340, separator: ' ') %> <%= link_to "Read More", workshop_path(workshop)%></p>
					</div>
					<div class="workshop-index-speaker clearfix">
						<span>
							<p>Speaker:<%= link_to workshop.user.full_name.titleize, user_path(workshop.user), class: "speaker-name-link" %></p>
						</span>
					</div>
					<div class="text-center">
						<%= link_to "View", workshop_path(workshop), class: "btn btn-primary" %>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>
<div class="text-center pagination-wrapper">
	<%= will_paginate @workshops, class: "pagination-ui" %>
</div>
<%= javascript_tag do %>
var useJsonFromUrl = true;
<% end %>