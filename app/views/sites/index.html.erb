<div class="container-fluid">
	<section id="hero-image">
		<div class="jumbotron">
			<h1>Inspire Your Team</h1>
			<h2>Book a game-changing onsite training session for your organization</h2>
			<% if current_user %>
				<a class="btn btn-primary btn-lg" id="btn-signup" href="/workshops">SEARCH TALKS</a>
					<% else %>
				<a class="btn btn-primary btn-lg" id="btn-signup" href="/signup">SIGN UP</a>
			<% end %>
		</div>
	</section>
	<!-- Search Bar -->
	<%= render "search_bar" %>

	<!-- Featured Workshops -->
	<h1 class="text-center">Featured Workshops</h1>
	<div class="workshop-container">
		<div class="row">
			<% @featured_workshops.each do |workshop| %>
				<div class="col-sm-12 col-md-4 col-lg-4">
					<div class="thumbnail featured-workshop">
						<%= image_tag workshop.image.url(:medium), class: "img-responsive workshop-img" %>
						<div class="featured-workshop-title-wrapper">
							<h3><%= link_to workshop.title.titleize, workshop_path(workshop), class: "workshop-title-link" %></h3>
						</div>
						<h4>
							Topic: <%= workshop.topic.name.titleize %>
							<br>
							Location: <%= workshop.location.titleize %>
						</h4>
						<div class="workshop-index-speaker clearfix">
							<%= link_to image_tag(workshop.user.avatar.url(:thumb)), user_path(workshop.user), class: "tiny-thumb" %>
							<span>
								<h4>Speaker:<%= link_to workshop.user.full_name.titleize, user_path(workshop.user), class: "speaker-name-link" %></h4>
							</span>
						</div>
						<p><%= truncate(workshop.description, :length => 150, :separator => ' ') %></p>
						<div class="text-center view-btn-wrapper">
							<%= link_to "View", workshop_path(workshop), class: "btn btn-primary" %>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
	<!-- End Featured Workshops -->

	<!-- Contact Us -->
	<div class="contact-container">
		<div class="row">
			<div class="col-sm-12">
				<h1>Contact Us</h1>
				<form id="contact-form" method="post" action="contact.php" role="form">

    <div class="messages"></div>

    <div class="controls">

        <div class="row">
            <div class="col-sm-10 col-md-6">
                <div class="form-group">
                    <label for="form_name">First Name</label>
                    <input id="form_name" type="text" name="name" class="form-control" placeholder="First name" required="required" data-error="Firstname is required.">
                    <div class="help-block with-errors"></div>
                </div>
            </div>
            <div class="col-sm-10 col-md-6">
                <div class="form-group">
                    <label for="form_lastname">Last Name</label>
                    <input id="form_lastname" type="text" name="surname" class="form-control" placeholder="Last name" required="required" data-error="Lastname is required.">
                    <div class="help-block with-errors"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 col-md-6">
                <div class="form-group">
                    <label for="form_email">Email</label>
                    <input id="form_email" type="email" name="email" class="form-control" placeholder="Ex. jessicajones@gmail.com" required="required" data-error="Valid email is required.">
                    <div class="help-block with-errors"></div>
                </div>
            </div>
            <div class="col-sm-10 col-md-6">
                <div class="form-group">
                    <label for="form_phone">Phone</label>
                    <input id="form_phone" type="tel" name="phone" class="form-control" placeholder="Please enter your phone">
                    <div class="help-block with-errors"></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="form_message">Message</label>
                    <textarea id="form_message" name="message" class="form-control" placeholder="Type your message here" rows="4" required="required" data-error="Please,leave us a message."></textarea>
                    <div class="help-block with-errors"></div>
                </div>
            </div>
            <div class="col-md-12">
                <input type="submit" class="btn btn-primary btn-send" value="Send message">
            </div>
        </div>
    </div>

</form>


			</div>
		</div>
	</div>


</div>