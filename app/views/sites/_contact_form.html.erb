<%= form_for @message, :html => { :style =>  'color:#fff' } do |f| %>
	<%= f.hidden_field :form, value: "contact" %>	
	<div class="row">
		<div class="col-sm-6">
			<div class="field form-group">
		    <%= f.label :name %><span class="required-label">*</span><br>
		    <%= f.text_field :name, autofocus: true, class: "form-control" %>
		  </div>
		</div>
		<div class="col-sm-6">
			<div class="field form-group">
		    <%= f.label :email %><span class="required-label">*</span><br>
		    <%= f.email_field :email, class: "form-control" %>
		  </div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
		 	<div class="field form-group">
		    <%= f.label :subject %><span class="required-label">*</span><br>
		    <%= f.text_field :subject, class: "form-control" %>
		  </div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<div class="field form-group">
		    <%= f.label 'Message' %><span class="required-label">*</span><br>
		    <%= f.text_area :content, rows: "7", class: "form-control", style: 'font-size:18px' %>
		  </div>
		  <p><span class="required-label">*</span> required field</p>
		  <div class="actions form-group text-center">
		    <%= f.submit 'Send', class: 'btn btn-inline-block btn-primary' %>
		  </div>
		</div>
	</div>
<% end %>